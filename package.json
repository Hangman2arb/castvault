  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@hotwired/turbo-rails": "^8.0.2",
    "autoprefixer": "^10.4.17",
    "esbuild": "^0.20.0",
    "postcss": "^8.4.35",
    "stimulus-clipboard": "^4.0.1",
    "stimulus-dropdown": "^2.1.0",
    "stimulus-notification": "^2.2.0",
    "stimulus-password-visibility": "^2.1.1",
