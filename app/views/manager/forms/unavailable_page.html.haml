.flex.items-center.justify-center.h-screen
  %div
    .flex.flex-col.items-center
      %svg{fill: "none", stroke: "#0ad1c4", "stroke-width" => "2", viewBox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg", width: "100px", height: "100px"}
        %circle{cx: "12", cy: "12", r: "10"}
        %line{x1: "15", y1: "9", x2: "9", y2: "15", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
        %line{x1: "9", y1: "9", x2: "15", y2: "15", "stroke-linecap" => "round", "stroke-linejoin" => "round"}

      %h1.text-white.text-4xl.font-bold
        = t('unavailable_page.title')
      %p.text-white
        = t('unavailable_page.message')

      = link_to @home_page_link, class: 'btn-primary mt-6' do
        %svg.w-3.h-3.mr-2{fill: "none", stroke: "currentColor", "stroke-width" => "2", viewBox: "0 0 24 24", xmlns: "http://www.w3.org/2000/svg"}
          %path{d: "M7 16l-4-4m0 0l4-4m-4 4h18", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
        %span.text-sm.font-medium
          = t('thank_you_page.home')

