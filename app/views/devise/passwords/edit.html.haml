.flex.flex-col.justify-center.mt-10.px-6.py-12.lg:px-8
  .sm:mx-auto.sm:w-full.sm:max-w-md
    %h2.mt-10.text-center.text-2xl.font-bold.leading-9.tracking-tight.text-white Change your password

  .mt-4.sm:mx-auto.sm:w-full.sm:max-w-md
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :reset_password_token

      .field
        %label.block.text-sm.font-medium.leading-6.text-white{for: "user_password"} New password
        - if @minimum_password_length
          %p.text-sm.text-gray-400
            (#{@minimum_password_length} characters minimum)
        .mt-2
          = f.password_field :password, autofocus: true, autocomplete: "new-password", required: true, class: "block w-full rounded-md border-0 text-white shadow-sm ring-1 ring-inset focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6 bg-white/5 py-1.5 ring-white/10", id: "user_password"

      .field
        %label.block.text-sm.font-medium.leading-6.text-white{for: "user_password_confirmation"} Confirm new password
        .mt-2
          = f.password_field :password_confirmation, autocomplete: "new-password", required: true, class: "block w-full rounded-md border-0 text-white shadow-sm ring-1 ring-inset focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6 bg-white/5 py-1.5 ring-white/10", id: "user_password_confirmation"

      .actions
        = f.submit "Change my password", class: "flex w-full justify-center rounded-md bg-indigo-500 px-3 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500 py-1.5"

      %p.mt-2.text-center.text-sm.text-gray-600
        = render "devise/shared/links"
