= render EmailCenteredTextComponent.new(font_size: '32px', line_height: 1, extra_styles: 'font-weight:bold;', text: t('email_changed.greeting', full_name: @resource.full_name))

- if @resource.try(:unconfirmed_email?)
  = render EmailCenteredTextComponent.new(text: t('email_changed.email_being_changed', email: @resource.unconfirmed_email))

  = render EmailCenteredTextComponent.new(text: t('email_changed.error_question'))
- else
  = render EmailCenteredTextComponent.new(text: t('email_changed.email_changed', email: @resource.email))
