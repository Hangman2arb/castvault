.flex.flex-col.justify-center.mt-10.px-6.py-12.lg:px-8
  .sm:mx-auto.sm:w-full.sm:max-w-sm
    %h2.mt-10.text-center.text-2xl.font-bold.leading-9.tracking-tight.text-white
      = t('sessions.sign_in_to_your_account')
  .mt-4.sm:mx-auto.sm:w-full.sm:max-w-md
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |session_form|
      %div
        = render InputComponent.new(form: session_form, key: :email, type: 'email_field', label: t('labels.email'))
      %div
        = render InputComponent.new(form: session_form, key: :password, type: 'password_field', label: t('labels.password'))
        .text-sm.flex.justify-end.mt-2
          = link_to t('sessions.forgot_password'), new_password_path(resource_name), class: "font-semibold text-indigo-400 hover:text-indigo-300"

      .flex.justify-center
        = session_form.submit t('labels.sign_in'), class: "btn-primary"
    %p.mt-10.text-center.text-sm.text-gray-400
      Not a member?
      = link_to t('sessions.sign_up_now'), new_registration_path(resource_name), class: "font-semibold leading-6 text-indigo-400 hover:text-indigo-300"
